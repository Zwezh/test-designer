/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "src",
    "paths": {
      "@appConstants": ["app/common/constants"],
      "@appSharedModule": ["app/common/shared.module.ts"],
      "@appLayouts/*": ["app/layout/*"],
      "@appComponents": ["app/common/components"]
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
